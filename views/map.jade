doctype html
html
  head
    title eBay NYC
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    // Bootstrap CSS 
    link(href='/stylesheets/bootstrap.css', rel='stylesheet', media='screen')
    link(href='/stylesheets/map.css', rel='stylesheet', media='screen')
    script(type='text/javascript', src='/javascripts/modestmaps.min.js')
    script(type='text/javascript', src='/javascripts/easey.js')
    script(type='text/javascript', src='/javascripts/easey.handlers.js')
    script(type='text/javascript', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDHk1JBBniXccptYty8nuwCASGFu_jk4g8')
    script(type='text/javascript', src='/javascripts/jquery.js')
    script(type='text/javascript', src='/javascripts/imagesloaded.pkgd.min.js')
    script(type='text/javascript', src='/javascripts/jquery-ui.min.js')
    script(type='text/javascript', src='/javascripts/jquery-imagefill.js')
    script(type='text/javascript', src='/javascripts/map.js')
    script(type='text/javascript', src='/javascripts/jquery.easing.1.3.js')
  body
    #header
        img.logo(src="http://p.ebaystatic.com/aw/home/visualizations/ebay_tm_rgb.svg")
    #map
    each city, i in cities
        div.area(class='#{i}', data-city='#{i}', data-zoom='#{city.zoom}', data-postal='#{city.address}')
            each item, j in items[i]
                div.point(data-postal='#{item.postal}', data-title='#{item.title}', data-image-url='#{item.largeImageUrl}',
                    data-bid-count='#{item.bidCount}' data-price-string='#{item.priceString}', data-watch-count='#{item.watchCount}')
    div.scroller
        div.info-module
            div.image-container
            p.info